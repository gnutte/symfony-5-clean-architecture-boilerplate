{% extends 'base.html.twig' %}

{% block body %}
    <div class="cart">
        {% for item in items %}
            <div class="cart-item">
                {{ item.product.title }} : {{ item.quantity }}
            </div>
        {% endfor %}
    </div>
    <div class="cart-total">{{ total }}</div>
    <div class="add-to-cart">{{ form(form) }}</div>
{% endblock %}